@model  Model.Adjunto

@using (Html.BeginForm("GuardarCurso", "Home", FormMethod.Post, new { id = "frm-adjuntos" }))
    {
        @Html.HiddenFor(x => x.Alumno_id)
        <div class="form-group">
            <label>Seleccione un documento a subir</label>
            <input class="file" name="Archivo">
        </div>
        <div class="text-right">
            <button data-ajax="true" data-confirm="¿Esta seguro de adjuntar este archivo al alumno?" 
                    type="submit" 
                    class="btn-sm btn btn-success">Guardar</button>
        </div>
    }
    <hr />


